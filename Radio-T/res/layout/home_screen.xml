<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <RelativeLayout
            android:id="@+id/home_screen_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="17dp"
            android:paddingRight="7dp"
            android:paddingLeft="7dp"
            android:background="@color/titlebar_background">
        <include
                android:id="@+id/logo"
                layout="@layout/app_logo"/>
        <TextView
                android:id="@+id/logo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/logo"
                android:layout_alignBottom="@id/logo"
                android:gravity="center_vertical|right"
                android:text="@string/logo_text"
                android:textScaleX="1.1"
                android:textColor="#A0A0A0"
                android:textStyle="bold"
                android:textSize="15dp"
                android:paddingTop="10dp"/>
    </RelativeLayout>
    <fragment android:name="org.dandelion.radiot.home_screen.DashboardFragment"
            android:id="@+id/dashboard_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/home_screen_header"
            />
</RelativeLayout>